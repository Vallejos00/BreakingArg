<form action= "/registrate" method="POST" id="formElem">
    <label for="firstName">Nombre:</label>
     <p class="err-message">{{firstNameError.msg}}</p>
<input class="form-input" id="firstName" type="text" name="firstName" value="{{user.firstName}}">

    <label for="lastName">Apellido:</label>
     <p class="err-message">{{lastNameError.msg}}</p>
<input class="form-input" id="lastName" type="text" name="lastName" value="{{user.lastName}}">

    <label for="email">Email</label>
     <p class="err-message">{{emailError.msg}}</p>
